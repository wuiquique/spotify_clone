---
import ForYouItem from "./ForYouItem.astro";

const { data } = Astro.props;
---

<div class="flex relative px-10">
  <h1 class="text-white text-2xl flex-1 hover:underline hover:cursor-pointer">
    Made for Luis Enrique Menendez
  </h1>
  <h3
    class="text-color-basic-text text-sm hover:underline hover:cursor-pointer"
  >
    Show all
  </h3>
</div>
<div class="flex flex-wrap items-center px-10 pt-5">
  {data.map((e, i) => <ForYouItem key={i} item={e} />)}
</div>
